<Window x:Class="WheatAndTurboReactors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="700" Width="1024"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        >
    <Grid>
        <Canvas Background="Black" MouseDown="MiniMap_Canvas_MouseDown" Height="516" VerticalAlignment="Top" HorizontalAlignment="Left" Width="734" Loaded="Minimap_Canvas_Loaded">
        
        </Canvas>
        <Canvas Background="#FFD61F1F" Height="154" VerticalAlignment="Top" HorizontalAlignment="Left" Width="510" Margin="506,516,0,0" MouseDown="Resources_Canvas_MouseDown">
        
        </Canvas>
        <Canvas HorizontalAlignment="Left" Width="511" Margin="-5,516,0,0" Height="154" VerticalAlignment="Top" Background="#FFBB9E9E" MouseDown="Ship_Canvas_MouseDown">
            <!--static values, we should inherite from the canvas-->
            <Grid Width="511" Height="154">
                <!--<Button Grid.Row="0" Grid.Column="1">Buy new ships</Button>
                <Button Grid.Row="0" Grid.Column="1">CUCU</Button>-->

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                <WrapPanel Orientation="Horizontal" Margin="10" Name="ShipsPanel">
                    <WrapPanel.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Margin" Value="10" />
                            <Setter Property="Width" Value="70" />
                            <Setter Property="Height" Value="70"/>
                        </Style>
                    </WrapPanel.Resources>
 
                    </WrapPanel>
                </ScrollViewer>
                <Button Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" MinWidth="80" Margin="10" Content="Buy some &#x0a;cool ships" Click="Button_Click"  />
            </Grid>
        </Canvas>
        <Canvas Margin="734,0,0,0" Height="516" VerticalAlignment="Top" HorizontalAlignment="Left" Width="282" Background="#FF888D22" MouseDown="Info_Canvas_MouseDown">
            
        </Canvas>

    </Grid>
</Window>
